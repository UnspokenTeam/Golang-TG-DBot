api.{$DOMAIN} {
    reverse_proxy /webhook* app:8080 {
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }

    handle / {
        respond "OK" 200
    }
}


click.{$DOMAIN} {
    reverse_proxy clickhouse:8123 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
    }
}

uptrace.{$DOMAIN} {
    reverse_proxy uptrace:14319 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
    }
}

db.{$DOMAIN} {
    reverse_proxy uptrace:14319 {
        header_up Host {host}
        header_up X-Real-IP {remote_host}
    }
}